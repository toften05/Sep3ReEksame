@page "/addTeam"

<PageTitle>addTeam</PageTitle>

<h1>create foodball team</h1>

<div class="form-group">
    <label for="teamName">Team Name:</label>
    <input id="teamName" @bind="@teamName" class="form-control" />
</div>

<div class="form-group">
    <label for="division">Division:</label>
    <input id="division" @bind="@division" class="form-control" />
</div>

<button class="btn btn-primary" @onclick="CreateTeam">Create Team</button>

@if (teamCreated)
{
    <p class="text-success">Team successfully created!</p>
    <p><strong>Team Name:</strong> @teamName</p>
    <p><strong>Division:</strong> @division</p>
}

@code {
    private string teamName;
    private string division;
    private bool teamCreated;

    private void CreateTeam()
    {
        teamCreated = true;
    }
}